@inherits RazorLayoutSlice<LayoutModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description"
        content="@Model.Title - Datastar ASP.NET Core Examples - A lightweight hypermedia framework for building reactive web applications">
    <meta name="color-scheme" content="light dark" />
    <link rel="stylesheet" href="/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/styles.css" asp-append-version="true" />
    <script type="module"
        src="https://cdn.jsdelivr.net/gh/starfederation/datastar@v1.0.0-beta.6/bundles/datastar.js" asp-append-version="true"></script>
    <title>@Model.Title</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    @await RenderSectionAsync("head")
</head>

<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="header-top">
                <div class="header-images">
                    <a href="https://data-star.dev" target="_blank" aria-label="Visit Datastar website">
                        <img src="/img/rocket.webp" alt="Datastar logo">
                    </a>
                    <a href="https://github.com/RickTheHat/DatastarExamples" target="_blank"
                        aria-label="Visit Rick's GitHub profile">
                        <img src="/img/rick.jpg" alt="Author profile" class="profile">
                    </a>
                </div>
                <a href="/" style="text-decoration: none; cursor: pointer; color: #fff;">
                <h1>ASP.NET Core Examples with Datastar</h1>
                </a>
            </div>
            <p>The hypermedia framework • Scale up from simple to real-time web apps</p>
            <nav>
              <ul>
                <li><a href="/" title="Home">Home</a></li>
                <li><a href="/quiz" title="Quiz">Quiz</a></li>
              </ul>
            </nav>
        </header>
        <!-- ./ Header -->

        <!-- Main -->
        <main id="main-content">
            @await RenderBodyAsync()
        </main>
        <!-- ./Main -->

        <!-- Footer -->
        <footer>
            <small>
                <p>
                    Inspired by • <a href="https://en.wikipedia.org/wiki/Hypermedia" target="_blank">Hypermedia</a> • <a
                        href="https://en.wikipedia.org/wiki/HATEOAS" target="_blank">HATEOAS</a> • <a
                        href="https://htmx.org/" target="_blank">Htmx</a><br>Built with • <a
                        href="https://en.wikipedia.org/wiki/MIT_License" target="_blank">MIT license</a> • <a
                        href="https://data-star.dev" target="_blank">Datastar</a> • <a
                        href="https://dotnet.microsoft.com/en-us/apps/aspnet" target="_blank">ASP.NET
                        Core</a>
                </p>
            </small>
        </footer>
        <!-- ./ Footer -->
    </div>
</body>

</html>

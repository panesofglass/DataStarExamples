@{
    ViewData["Title"] = "Delete Row (ASP.NET MVC)";
}

<div class="demo-section">
    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="ClickToLoad" class="demo-nav-link">
            ← PREVIOUS: CLICK TO LOAD
        </a>
        <a asp-controller="Home" asp-action="DialogsBrowser" class="demo-nav-link">
            NEXT: DIALOGS BROWSER →
        </a>
    </div>

    <section id="example">
        <h2>Delete Row (ASP.NET MVC)</h2>
        <p>Delete row demonstration will go here...</p>
        <div class="demo-content" role="region" aria-label="Demo visualization">
            <p id="total-count">
                Showing @ViewData["TotalCount"] notes
            </p>
            <button
                id="load-more-btn"
                class="button button-disabled">
                Reset
            </button>
            <div class="example-content">
                <div id="notes-list" class="notes-list">
                    @foreach (var note in Model)
                    {
                        <div id="note_@note.Id" class="note-item">
                            <p>@note.Content</p>
                            <button data-on-click="@@delete('Home/DeleteRowData/@note.Id')">Delete</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="ClickToLoad" class="demo-nav-link">
            ← PREVIOUS: CLICK TO LOAD
        </a>
        <a asp-controller="Home" asp-action="DialogsBrowser" class="demo-nav-link">
            NEXT: DIALOGS BROWSER →
        </a>
    </div>
</div>

@await Html.PartialAsync("_MoreExamples")
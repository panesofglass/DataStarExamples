<section id="example">
    <h2 id="active-search-demo">
        <a href="#active-search-demo" class="header-anchor">
            Active Search (ASP.NET MVC)
        </a>
    </h2>
    <p>This example actively searches a notes database as the user enters text</p>
    <p id="total-count">
        Showing @ViewData["CurrentCount"] of @ViewData["TotalCount"] notes
    </p>
    <div class="example-content">
        <div class="search-container">
            <input type="text" placeholder="Search..." class="search-input" data-bind-input
                data-on-input__debounce.1000ms="@@put('Home/Search')" />
        </div>
        <div id="notes-list" class="notes-list">
            @foreach (var note in Model)
            {
                <div class="note-item">
                    <p>@note.Content</p>
                </div>
            }
        </div>
    </div>
</section>

